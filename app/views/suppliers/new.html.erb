<div class="col-md-4"></div>
<div class="col-md-4">
  <%= form_for @supplier do |f| %>
    <div class="row">
     <div class="col-md-3"></div>
     <div class="fileinput fileinput-new col-md-6" data-provides="fileinput">
       <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
         <img src="http://placekitten.com/g/200/150" alt="...">
       </div>
       <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"></div>
       <div class="row">
         <div class="col-md-2"></div>
         <div class="col-md-8">
           <span class="btn btn-success btn-file"><span class="fileinput-new">Select image</span><span class="fileinput-exists">Change</span><%= f.file_field :avatar %></span>
         </div>
         <div class="col-md-2"></div>
       </div>
     </div>
     <div class="col-md-3"></div>
    </div>
    <hr>
    <div class="form-group">
      <label for="exampleInputEmail1">Company Name</label>
      <%= f.text_field :supplier_name, class: 'form-control' , placeholder: 'Comapny Name' %>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Email</label>
      <%= f.text_field :supplier_email, class: 'form-control' , placeholder: 'Comapny Email' %>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <%= f.password_field :password, class: 'form-control' , placeholder: 'Password' %>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Address</label>
      <%= f.text_field :supplier_address, class: 'form-control' , placeholder: 'Comapny Address' %>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Contact no</label>
      <%= f.text_field :supplier_contact_no, class: 'form-control' , placeholder: 'Comapny Contact Number' %>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Description</label>
      <%= f.text_area :supplier_desc, class: 'form-control' , placeholder: 'Comapny Description' %>
    </div>
    <%= f.submit 'Register', class: 'btn btn-primary btn-lg' %>

  <% end %>
</div>
<div class="col-md-4"></div>