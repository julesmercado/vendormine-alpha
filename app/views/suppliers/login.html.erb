

<div class="col-md-4"></div>
<div class="col-md-4" ng-controller='appController'>
		 <%= form_for(:supplier, url: 'login_attempt') do |f| %>
	      <div class="form-group">
	        <label class="client-login-label">Email</label>
	        <%= f.email_field(:login_email, class: 'form-control client-login-field', required: true, placeholder: 'Username or Email') %>
	      </div>
	       <div class="form-group">
	        <label class="client-login-label">Password</label>
	        <%= f.password_field(:login_password, class: 'form-control client-login-field', required: true, placeholder: 'Password') %>
	      </div>
	      <div class="form-group">
	      	<%= f.submit "Log In", class: 'btn btn-lg btn-success' %>
	      </div>
		<% end %>
</div>
<div class="col-md-4"> {{ user }}</div>


