<!DOCTYPE html>
<html ng-app="vendormine">
<head>
  <title>Vendormine</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body ng-controller='appController'>
<div class="supplier-container">
	<div class="row sidebar-nav-fixed affix">
		<div class="col-md-12 panel panel-default">
			<% if current_user %>
			    <div class="row avatar-panel">
			    	<div class="row">
				    	<div class="col-md-2"></div>
						<div class="col-md-8">
							<img src="http://placekitten.com/g/150/150" alt="..." class="img-circle img-responsive">
						</div>
						<div class="col-md-2"></div>
					</div>
					<div class="row">
						<div class="col-md-2"></div>
						<div class="col-md-8 current-user">
							<p class="supplier-name"><%= current_user.supplier_name %></p>
						</div>
						<div class="col-md-2"></div>
					</div>
			    </div>
				<div class="row nav-bar">
					<ul class="nav nav-pills nav-stacked">
						<li class="active"><a href="#">Home</a></li>
					    <li><a href="#">Account</a></li>
					    <li><%= link_to "Add Supply", new_supplier_supply_path(current_user) %></li>
					    <li><%= link_to "Logout", logout_suppliers_path, method: :delete %></li>
					</ul>
				</div>
			<% else %>

			<% end %>
		</div>
	</div>
</div>

